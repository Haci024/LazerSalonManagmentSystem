@model IEnumerable<Entity.Concrete.OutMoney>
@{
    ViewData["Title"] = "OutMoneyList";
    Layout = "~/Areas/Support/Views/Shared/_SupportLayout.cshtml";
}

<div class="container-fluid">

    <!-- Exportable Table -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <div style="display:flex;justify-content:space-between;align-items:center">
                        <h2>
                            Xərclər
                        </h2>
                        <div style="padding-right:30px">
                          
                        </div>
                    </div>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable js-basic-example">
                            <thead>
                                <tr>
                                    <th>Tarix</th>
                                    <th>Qeydiyyatçı</th>
                                    <th>Səbəb</th>
                                    <th id="priceValueMaster1">Ödəniş</th>
                                    <th>Açıqlama</th>
                                    <th class="text-right">
                                        <div style="margin-right:20px">
                                            Əməliyyatlar
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Tarix</th>
                                    <th>Qeydiyyatçı</th>
                                    <th>Səbəb</th>
                                    <th>Ödəniş</th>
                                    <th>Açıqlama</th>
                                    <th class="text-right ">
                                        <div style="margin-right:20px">
                                            Əməliyyatlar
                                        </div>
                                    </th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AddingDate.ToString("dd.MM.yyyy  HH:mm")</td>
                                        <td>@item.AppUser.UserName</td>
                                        <td>@item.SpendCategory.Category</td>
                                        <td>@item.Price.ToString(".0") AZN</td>
                                        <td>@item.Description</td>
                                        <td style="display:flex;justify-content:end">
                                            <div style="margin-right:5px">
                                            </div>
                                            <div style="margin-right:10px">
                                                <a asp-action="DeleteOutMoney" asp-route-Id="@item.Id" class="btn btn-danger waves-effect">
                                                    <i class="material-icons">delete</i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Exportable Table -->
</div>

