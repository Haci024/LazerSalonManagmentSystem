
@model DTO.DTOS.AppUserDto.AllUserListDTO
@{
    ViewData["Title"] = "AllUsers";
    Layout = "~/Areas/Support/Views/Shared/_SupportLayout.cshtml";
    int num = 0;
}

<div class="container-fluid">

    <!-- Exportable Table -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <div style="display:flex;justify-content:space-between;align-items:center">
                        <h2>
                         Bütün  İstifadəçilər
                        </h2>
                        <div style="padding-right:30px">
                        </div>
                    </div>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);">Action</a></li>
                                <li><a href="javascript:void(0);">Another action</a></li>
                                <li><a href="javascript:void(0);">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Ad Soyad</th>
                                    <th>İstifadəçi adı</th>     
                                    <th>Filial</th>
                                    <th> Status</th>
                                    <th class="text-center">Əməliyyatlar</th>
                                  
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>No</th>
                                    <th>Ad Soyad</th>
                                    <th>İstifadəçi adı</th>    
                                    <th>Filial</th>
                                    <th> Status</th>
                                    <th class="text-center">Əməliyyatlar</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    
                                    
                                        <tr>
                                            <td>@(num = num + 1)</td>
                                            <td>@user.FullName</td>
                                            <td>@user.UserName</td>
                                            <td>@user.Filial.FilialName</td>

                                            <td>
                                                @if (user.IsBlock == false)
                                                {
                                                    <b style="color:#4CAF50">Aktivdir</b>
                                                }
                                                else
                                                {
                                                    <b style="color:#F44336;">Blok edilib!</b>
                                                }
                                            </td>
                                            <td style="padding-top:17px" class="text-center">
                                                @if (User.IsInRole("SuperSupporter") || User.IsInRole("Supporter"))
                                                {
                                                    if (User.Identity.Name != user.UserName)
                                                    {
                                                        @if (user.IsBlock == false)
                                                        {
                                                            <a asp-controller="Users" asp-action="UserBlock" asp-route-AppUserId="@user.Id" class="btn bg-green waves-effect">
                                                                <i class="material-icons">build</i>
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a asp-controller="Users" asp-action="UserBlock" asp-route-AppUserId="@user.Id" class="btn bg-red waves-effect">
                                                                <i class="material-icons">block</i>
                                                            </a>
                                                        }
                                                    }



                                                    <a asp-controller="Users" asp-action="UpdatePassword" asp-route-AppUserId="@user.Id" class="btn bg-indigo">
                                                        <i class="material-icons">vpn_key</i>
                                                    </a>
                                                    <a asp-controller="Users" asp-action="AllInfo" asp-route-AppUserId="@user.Id" class="btn bg-yellow">
                                                        <i class="material-icons">visibility</i>
                                                    </a>
                                                }
     

                                            </td>
                                        </tr>
                                    
                                      
                                    }
                                  
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

