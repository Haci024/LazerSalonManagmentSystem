@model DTO.DTOS.AppUserDto.NewUserDTO
@{
    ViewData["Title"] = "AllInfo";
    Layout = "~/Areas/Support/Views/Shared/_SupportLayout.cshtml";
}

<div class="container">

    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-8">
            <div class="card">
                <div class="header text-center">
                    <h2>İstifadəçi məlumatları</h2>
                </div>
                <div class="body">
                    <form id="form_validation" method="post">
                        <p>
                            <label>Ad və Soyad</label>
                        </p>
                        <div class="input-group">

                            <span class="input-group-addon">
                                <i class="material-icons">person</i>
                            </span>
                            <div class="form-line">
                                <input type="text" asp-for="FullName" class="form-control" placeholder="Ad və Soyad" readonly>
                            </div>
                        </div>
                        <p>
                            <label>İstifadəçi adı</label>
                        </p>
                        <div class="input-group">

                            <span class="input-group-addon">
                                <i class="material-icons">person</i>
                            </span>
                            <div class="form-line">
                                <input type="text" asp-for="UserName" class="form-control" placeholder="İstifadəçi adı" readonly>
                            </div>
                        </div>
                        <div class="form-group form-float">

                            <div>

                                <select class="form-control show-tick" asp-for="FilialId">
                                  
                                    @foreach (var item in Model.Filials)
                                    {

                                        <option selected>@item.FilialName</option>

                                    }
                                </select>
                            </div>
                        </div>
                        
                        
                     
                      
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="text-center">
                            <button class="btn btn-primary waves-effect" type="submit">Yarat</button>
                            <a asp-action="AllUsers" class="btn btn-success">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>


