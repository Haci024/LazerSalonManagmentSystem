@model IEnumerable<Entity.Concrete.SolariumAppointment>
@{
    ViewData["Title"] = "SolariumSessions";
    Layout = "~/Areas/Support/Views/Shared/_SupportLayout.cshtml";
}

<div class="container-fluid">

    
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <div style="display:flex;justify-content:space-between;align-items:center">
                        <h2>
                            Aktiv Solarium Paketləri
                        </h2>
                        <div style="padding-right:30px">
                            <a asp-action="SuccessfullyPacketsList" class="btn bg-deep-orange waves-effect ">
                                <i class="material-icons">list</i>
                            </a>
                            <a asp-action="AddSolariumAppointment" class="btn bg-deep-purple waves-effect ">
                                <i class="material-icons">assignment_add </i>
                            </a>
                        </div>
                    </div>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">

                            </a>
                            <ul class="dropdown-menu pull-right">
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable js-basic-example">
                            <thead>
                                <tr>

                                    <th>Ad Soyad</th>
                                    <th>Qeydiyyatçı</th>
                                    <th>Nömrə</th>
                                    <th>Ödəniş</th>
                                    <th>İstifadə olunan müddət</th>
                                    <th>Qalan müddət</th>
                                    <th>Paket limiti</th>
                                    <th>Bitməsinə qalan müddət</th>
                                    <th class="text-right ">
                                        <div style="margin-right:20px">
                                            Əməliyyatlar
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>

                                    <th>Ad Soyad</th>
                                    <th>Qeydiyyatçı</th>
                                    <th>Nömrə</th>
                                    <th>Ödəniş</th>
                                    <th>İstifadə olunan müddət</th>
                                    <th>Qalan müddət</th>
                                    <th>Paket limiti</th>
                                    <th>Bitməsinə qalan müddət</th>
                                    <th class="text-right ">
                                        <div style="margin-right:20px">
                                            Əməliyyatlar
                                        </div>
                                    </th>

                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                        <tr>
                                            <td>@item.Customer.FullName</td>
                                            <td>@item.AppUser.UserName</td>
                                            <td>@item.Customer.PhoneNumber.ToString("0000000000")</td>
                                            <td>@item.Price.ToString("#0.#") AZN</td>
                                            <td>@item.UsingMinute dəqiqə</td>
                                            <td>@item.RemainingMinute dəqiqə</td>
                                            <td>@item.MinuteLimit dəqiqə</td>
                                            <td>
                                                @{
                                                    TimeSpan kalanSure = item.RemainingTime - DateTime.Now;
                                                    string kalanSureMetni = string.Format("{0} gün {1} saat {2} dəqiqə", (int)kalanSure.TotalDays,kalanSure.Hours,kalanSure.Minutes);
                                                }
                                                <span id="geriSayim">@kalanSureMetni</span>
                                            </td>
                                            <td style="display:flex;justify-content:end">
                                                <div style="margin-right:10px">
                                                    <a asp-action="DeleteSolarium"  asp-route-SolariumId="@item.Id" class="btn bg-red waves-effect">
                                                        <i class="material-icons">delete</i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    

                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Exportable Table -->
</div>

