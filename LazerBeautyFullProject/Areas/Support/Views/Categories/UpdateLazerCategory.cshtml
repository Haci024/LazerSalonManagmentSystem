@model DTO.DTOS.LazerAppointmentDTO.AddLazerCategoryDTO
@{
    ViewData["Title"] = "UpdateLazerCategory";
    Layout = "~/Areas/Support/Views/Shared/_SupportLayout.cshtml";
}
<div class="container">
    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-8">
            <div class="card">
                <div class="header text-center">
                    <h2>Lazer Kateqoriyası məlumatlarını yenilə</h2>
                </div>
                <div class="body">
                    <form id="form_validation" method="post">
                        <div class="form-group form-float">
                            <div class="form-group form-float">
                                <label class="form-label">Əsas Kategoriyalar</label>
                                <div>
                                    <select class="form-control show-tick" asp-for="MainCategoryId" id="childCategoryId">
                                        <option selected>Paket seçin ...</option>
                                        @foreach (var item in Model.MainCategory)
                                        {

                                            <option value="@item.Id">@item.Name --- @item.Filial.FilialName</option>

                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group form-float">
                              
                                <div>
                                    <label class="form-label">Filial</label>
                                    <select class="form-control show-tick" asp-for="FilialId" id="childCategoryId">
                                        @foreach (var item in Model.Filial)
                                        {

                                            <option value="@item.Id">@item.FilialName</option>

                                        }
                                    </select>
                                </div>
                            </div>
                            <label class="form-label">Nahiyə</label>
                            <div class="form-line">
                                <input type="text" asp-for="Name" class="form-control">

                            </div>
                        </div>
                        <div class="form-group form-float">
                            <label class="form-label">Qiymət</label>
                            <div class="form-line">
                                <input type="number" asp-for="Price" class="form-control" min="0" step="0.1">

                            </div>
                        </div>
                 
                        <div class="font-bold col-pink" asp-validation-summary="ModelOnly"></div>
                        <div class="text-center">
                            <button class="btn btn-primary waves-effect" type="submit" id="submitButton">Əlavə et</button>
                            <a asp-action="LazerCategoryList" class="btn btn-success">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
