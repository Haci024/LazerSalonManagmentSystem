@model DTO.DTOS.BodyShapingDTO.AddBodyShapingPacketDTO
@{
    ViewData["Title"] = "AddNewSolariumPacket";
    Layout = "~/Areas/Support/Views/Shared/_SupportLayout.cshtml";
}

<div class="container">

    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-8">
            <div class="card">
                <div class="header text-center">
                    <h2>Yeni Bədən şəkilləndirmə paketi</h2>
                </div>
                <div class="body">
                    <form id="form_validation" method="post">
                        <div class="form-group form-float">
                            <div class="form-group form-float">
                                <div>
                                    <select class="form-control show-tick" asp-for="MainCategoryId" id="childCategoryId">
                                        <option selected>Katgoriya seçin ...</option>
                                        @foreach (var item in Model.MainCategory)
                                        {

                                            <option value="@item.Id">@item.Packet</option>

                                        }
                                    </select>
                                </div>
                            </div>
                            <label class="form-label">Paketin adı</label>
                            <div class="form-line">
                                <input type="text" asp-for="Packet" class="form-control">

                            </div>
                        </div>
                        <div class="form-group form-float">
                            <label class="form-label">Paketin qiyməti</label>
                            <div class="form-line">
                                <input type="number" asp-for="Price" class="form-control" min="0" step="0.1">

                            </div>
                        </div>
                        <div class="form-group form-float">
                            <label class="form-label">Seans sayı</label>
                            <div class="form-line">
                                <input type="number" asp-for="SessionCount" class="form-control" min="0">

                            </div>
                        </div>
                        <div class="form-group form-float">
                            <label class="form-label">Seans müddəti</label>
                            <div class="form-line">
                                <input type="number" asp-for="SessionDuration" class="form-control" placeholder="gün ilə qeyd edin..."  min="0">

                            </div>
                        </div>
                <div class="font-bold col-pink" asp-validation-summary="ModelOnly"></div>
                        <div class="text-center">
                            <button class="btn btn-primary waves-effect" type="submit" id="submitButton">Əlavə et</button>
                            <a asp-action="BodyShapingPacketList"  class="btn btn-success">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        $('#childCategoryId').change(function() {
            var selectedOption = $(this).find('option:selected');
            var packetName = selectedOption.text();
            $('input[name="Packet"]').val(packetName);
        });
    });
</script>

