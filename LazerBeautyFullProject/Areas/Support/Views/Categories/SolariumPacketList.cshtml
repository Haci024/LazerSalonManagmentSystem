@model IEnumerable<Entity.Concrete.SolariumCategories>
@{
    ViewData["Title"] = "Packets";
    Layout = "~/Areas/Support/Views/Shared/_SupportLayout.cshtml";
    int num = 0;
}

<div class="container-fluid">

    <!-- Exportable Table -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <div style="display:flex;justify-content:space-between;align-items:center">
                        <h2>
                            Solarium paketləri
                        </h2>
                        <div style="padding-right:30px">
                        
                            <a asp-action="AddNewSolariumPacket" class="btn bg-deep-purple waves-effect ">
                                <i class="material-icons">add</i>
                            </a>
                        </div>
                    </div>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Paket</th>
                                    <th>Paket limiti</th>
                                    <th>Qiymət</th>
                                    <th>İstifadə müddəti</th>
                                    <th>Status</th>
                                    <th class="text-center">
                                        <div style="margin-right:20px">
                                            Əməliyyatlar
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>No</th>
                                    <th>Paket</th>
                                    <th>Paket limiti</th>
                                    <th>Qiymət</th>
                                    <th>İstifadə müddəti</th>
                                    <th>Status</th>
                                    <th class="text-center">
                                        <div style="margin-right:20px">
                                            Əməliyyatlar
                                        </div>
                                    </th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(num = num + 1)</td>
                                        <td>@item.MainCategory.Name</td>
                                        <td>@item.Minute dəqiqə</td>
                                        <td>@item.Price AZN</td>
                                        <th>@item.UsingPeriod gün</th>
                                        <td>
                                            @if (item.IsDeactive == true)
                                            {
                                                <b style="color:red">Deaktiv!</b>
                                            }
                                            else
                                            {
                                                <b style="color:green">Aktiv</b>
                                            }
                                        </td>
                                        <td style="display:flex;justify-content:center">
                                            @if (item.IsDeactive == true)
                                            {
                                                <div style="margin-right:10px" class="text-center">
                                                    <a asp-action="PacketOFF" asp-route-CategoryId="@item.Id" class="btn bg-green waves-effect">
                                                        <i class="material-icons">build</i>
                                                    </a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div style="margin-right:10px" class="text-center">
                                                    <a asp-action="PacketOFF" asp-route-CategoryId="@item.Id" class="btn bg-red waves-effect">
                                                        <i class="material-icons">delete</i>
                                                    </a>
                                                </div>
                                            }
                                            <div style="margin-right:10px" class="text-center">
                                                <a asp-action="UpdateSolariumPacket" asp-route-CategoryId="@item.Id" class="btn bg-blue waves-effect">
                                                    <i class="material-icons">edit</i>
                                                </a>
                                            </div>





                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Exportable Table -->
</div>