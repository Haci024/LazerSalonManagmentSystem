@model DTO.DTOS.LazerAppointmentDTO.CompletedReservationStatusDTO
@{
    ViewData["Title"] = "UpdateReservationStatus";
    Layout = "~/Areas/ArzumBeauty/Views/Shared/_ArzumEsteticLayout.cshtml";
}
<div class="container">

    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-8">
            <div class="card">
                <div class="header text-center">
                    <h2>Lazer seansı çıxış formu</h2>
                </div>
                <div class="body">
                    <form id="form_validation" method="post">
                        <div class="form-group form-float">
                            <label class="form-label">Müştəri adı və soyadı</label>
                            <div class="form-line">
                                <input type="text" asp-for="CustomerName" class="form-control" readonly>

                            </div>

                        </div>
                        <div class="form-group form-float">
                            <label class="form-label">Lazer ustası</label>
                            <div class="form-line">
                                <input type="text" asp-for="LazerMasterName" class="form-control" readonly>

                            </div>

                        </div>
                        <div class="row clearfix">

                            <div class="row clearfix">
                                <div class="col-lg-12 form-line">

                                    <div class="demo-radio-button">
                                        <label class="form-label">Status</label>
                                        <div class="form-line">
                                            <input name="IsCompleted" asp-for="IsCompleted" type="radio" value="True" id="radio_30" class="with-gap radio-col-light-green">
                                            <label for="radio_30">Seans tamamlandı</label>
                                            <input name="IsCompleted" asp-for="IsCompleted" type="radio" value="False" id="radio_32" class="with-gap radio-col-blue">
                                            <label for="radio_32">Yarımçıq qaldı</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <label class="form-label">İmpuls</label>
                            <div class="form-line">
                                <input type="number" asp-for="ImpulsCount" class="form-control">
                                
                            </div>

                        </div>
                        <div class="col-md-12 dateInput1">
                            <b id="timeLabel">Çıxış saatı </b>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="material-icons">access_time</i>
                                </span>
                                <div class="form-line">
                                    <input type="time" asp-for=EndTime class="form-control time24" placeholder="Ex: 23:59">
                                </div>
                            </div>
                        </div>
                     
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="text-center">
                            <button class="btn btn-primary waves-effect" type="submit">Yenilə</button>
                            <a asp-action="LazerMasterPage" asp-route-LazerMasterId="@Model.LazerMasterId" class="btn btn-success">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        var radioButtons = $("input[name='IsCompleted']");
        var EndTimeInput = $(".dateInput1:has(#timeLabel)");


        toggleFields();


        radioButtons.change(function () {
            toggleFields();
        });

        function toggleFields() {
            var selectedValue = $("input[name='IsCompleted']:checked").val();

            EndTimeInput.show();
         
        }
      
        EndTimeInput.show();
        
    });
</script>

