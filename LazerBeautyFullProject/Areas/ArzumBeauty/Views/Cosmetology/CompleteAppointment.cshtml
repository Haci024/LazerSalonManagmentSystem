@model DTO.DTOS.CosmetologyDTO.CompleteSessionDTO

<div class="container">

    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-8">
            <div class="card">
                <div class="header text-center">
                    <h2> Kosmetologiya Çıxış formu </h2>
                </div>
                <div class="body">
                    <form id="form_validation" method="post">
                        <div class="form-group form-float">
                            <label class="form-label">Müştəri adı və soyadı</label>
                            <div class="form-line">
                                <input type="text" asp-for="Customer" class="form-control" id="CustomerNameInput">

                            </div>
                            <div id="CustomerInfo">
                            </div>
                        </div>
                        <div class="form-group form-float" style="padding-top:14px">
                            <label class="form-label">Kosmetoloq<span class="font-bold col-pink"></span></label>

                            <div class="form-line">
                                <input type="text" asp-for="Master" class="form-control" readonly>
                            </div>
                            <span class="font-bold col-pink"></span>
                        </div>


                        <div class="form-group form-float" style="padding-top:14px">
                            <label class="form-label">Açıqlama<span class="font-bold col-pink"></span></label>

                            <div class="form-line">
                                <input type="text" asp-for="Description" class="form-control">
                            </div>
                            <span class="font-bold col-pink"></span>
                        </div>
                        <div class="form-group form-float" style="padding-top:14px">
                            <label class="form-label">Ödəniş məbləği<span class="font-bold col-pink"></span></label>

                            <div class="form-line">
                                <input type="number" asp-for="Price" class="form-control" min="0" step="0.1">
                            </div>
                            <span class="font-bold col-pink"></span>
                        </div>
                        <div class="form-group form-float" style="padding-top:14px">
                            <label class="form-label">Çıxış saatı<span class="font-bold col-pink"></span></label>

                            <div class="form-line">
                                <input type="time" asp-for="OutDate" class="form-control">
                            </div>
                            <span class="font-bold col-pink"></span>
                        </div>




                        <div class="font-bold col-pink" asp-validation-summary="ModelOnly"></div>

                        <div class="text-center">
                            <button class="btn btn-primary waves-effect" type="submit">Əlavə et</button>
                            <a asp-action="CosmetologPage" asp-route-CosmetologId="@Model.CosmetologId" class="btn btn-success">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>