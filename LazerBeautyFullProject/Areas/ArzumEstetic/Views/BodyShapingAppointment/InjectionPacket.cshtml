@model DTO.DTOS.BodyShapingDTO.InjectionPacketDTO
@{
    ViewData["Title"] = "InjectionPacket";
    Layout = "~/Areas/ArzumEstetic/Views/Shared/_ArzumEsteticLayout.cshtml";
}
<div class="container">

    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-8">
            <div class="card">
                <div class="header text-center">
                    <h2>Bədən şəkilləndirmə imtina formu</h2>
                </div>
                <div class="body">
                    <form id="form_validation" method="post">
                        <div class="form-group form-float">
                            <label class="form-label">Paket üçün edilən ödəniş</label>
                            <div class="form-line">
                                <input type="text" asp-for="PacketValue" class="form-control" readonly>

                            </div>
                        </div>
                     
                     
                        <div class="form-group form-float" style="padding-top:14px">
                            <label class="form-label">Müştəriyə qaytarılacaq pul <span class="font-bold col-pink"></span></label>
                            <div class="form-line">
                                <input type="number" asp-for="ReturnMoney" class="form-control" id="totalPrice" min="0" step="0.1" max="@Model.PacketValue">
                            </div>
                            <span class="font-bold col-pink"></span>
                        </div>
                        <div class="form-group form-float" style="padding-top:14px">
                            <label class="form-label">Açıqlama <span class="font-bold col-pink"></span></label>
                            <div class="form-line">
                                <textarea  asp-for="Description" class="form-control"></textarea>
                            </div>
                            <span class="font-bold col-pink"></span>
                        </div>
                        <div class="font-bold col-pink" asp-validation-summary="ModelOnly"></div>
                        <div class="text-center">
                            <button class="btn btn-primary waves-effect" type="submit" id="submitButton">Əlavə et</button>
                            <a asp-action="BodyShapingMasterPage" asp-route-BodyShapingMasterId="@Model.MasterId" class="btn btn-success">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<script>


    document.getElementById("form_validation").addEventListener("submit", function (event) {

        document.getElementById("submitButton").disabled = true;


        setTimeout(function () {
            document.getElementById("submitButton").disabled = false;
        }, 5000);
    });

</script>