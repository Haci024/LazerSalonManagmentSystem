@model DTO.DTOS.BodyShapingDTO.AddSessionDTO
@{
    ViewData["Title"] = "AddMioStimulyasiyaSession";
    Layout = "~/Areas/ArzumEstetic/Views/Shared/_ArzumEsteticLayout.cshtml";
}
<div class="container">

    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-8">
            <div class="card">
                <div class="header text-center">
                    <h2>Termo yorğan seansı yarat</h2>
                </div>
                <div class="body">
                    <form id="form_validation" method="post">
                        <div class="form-group form-float">
                            <label class="form-label">Seans</label>
                            <div class="form-line">
                                <input type="text" asp-for="PacketName" class="form-control" readonly>

                            </div>

                        </div>
                        <div class="form-group form-float">
                            <label class="form-label">Seans sayı</label>
                            <div class="form-line">
                                <input type="number" asp-for="SessionCount" class="form-control" min="0">

                            </div>

                        </div>
                        <div class="form-group form-float">
                            <label class="form-label">Seans müddəti</label>
                            <div class="form-line">
                                <input type="number" asp-for="Duration" class="form-control" min="0">

                            </div>

                        </div>


                        <div class="font-bold col-pink" asp-validation-summary="ModelOnly"></div>
                        <div class="text-center">
                            <button class="btn btn-primary waves-effect" type="submit" id="submitButton">Yarat</button>
                            <a asp-action="SessionList" asp-route-BodyShapingAppointmentId="@Model.AppointmentId" class="btn btn-success">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<script>


    document.getElementById("form_validation").addEventListener("submit", function (event) {

        document.getElementById("submitButton").disabled = true;


        setTimeout(function () {
            document.getElementById("submitButton").disabled = false;
        }, 5000);
    });

</script>