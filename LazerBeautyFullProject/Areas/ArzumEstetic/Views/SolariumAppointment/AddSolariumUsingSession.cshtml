@model DTO.DTOS.SolariumDTO.UsingListAddAppointmentDTO
@{
    ViewData["Title"] = "İşçilər siyahı";
    Layout = "~/Areas/ArzumEstetic/Views/Shared/_ArzumEsteticLayout.cshtml";
   
}
<div class="container">

    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-8">
            <div class="card">
                <div class="header text-center">
                    <h2>Solarium İstifadə müddəti formu</h2>
                </div>
                <div class="body">
                    <form id="form_validation" method="post">
                        <div class="form-group form-float">
                            <label class="form-label">Qalan müddət</label>
                            <div class="form-line">
                                <p type="text" class="form-control" read>@Model.RemainingMinute dəqiqə</p>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <label class="form-label">İstifadə Müddət</label>
                            <div class="form-line">
                                <input type="number" asp-for="UsingMinute" class="form-control" min="0" max="@Model.RemainingMinute">
                            </div>
                        </div>

                        <div class="font-bold col-pink" asp-validation-summary="ModelOnly"></div>
                        <div class="text-center">
                            <button class="btn btn-primary waves-effect" type="submit" id="submitButton">Əlavə et</button>
                            <a asp-action="SolariumAppointmentList" class="btn btn-success">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<script>


    document.getElementById("form_validation").addEventListener("submit", function (event) {

        document.getElementById("submitButton").disabled = true;


        setTimeout(function () {
            document.getElementById("submitButton").disabled = false;
        }, 5000);
    });

</script>
