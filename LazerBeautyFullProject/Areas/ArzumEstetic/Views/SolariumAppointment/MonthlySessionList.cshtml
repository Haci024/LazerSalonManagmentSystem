@model IEnumerable<Entity.Concrete.SolariumUsingList>
@{
    ViewData["Title"] = "MonthlySessionList";
    Layout = "~/Areas/ArzumEstetic/Views/Shared/_ArzumEsteticLayout.cshtml";
}



<div class="container-fluid">

    <!-- Exportable Table -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <div style="display:flex;justify-content:space-between;align-items:center">
                        <h2>
                            Solarium paketi istifadə təqvimi 
                        </h2>
                        <h3><b>@ViewBag.CustomerName</b></h3>
                        <div style="padding-right:30px">
                            <a asp-action="SolariumAppointmentList" class="btn btn-success waves-effect ">
                                <i class="material-icons">keyboard_return</i>
                            </a>
                        </div>
                    </div>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">

                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);">Action</a></li>
                                <li><a href="javascript:void(0);">Another action</a></li>
                                <li><a href="javascript:void(0);">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable js-basic-example">
                            <thead>
                                <tr>

                                    <th>Tarix</th>
                                    <th>Qeydiyyatçı</th>
                                    <th>İstifadə oluna müddət</th>
                                    <th>Qalan müddət</th>
                                  
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Tarix</th>
                                    <th>Qeydiyyatçı</th>
                                    <th>İstifadə olunan müddət</th>
                                    <th>Qalan müddət</th>
                                    

                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UsingDate.ToString("dd.MM.yyyy  HH:mm")</td>
                                        <td>@item.AppUser.UserName</td>
                                        <td>@item.UsingMinute dəqiqə</td>
                                        <td>@item.RemainingMinute dəqiqə</td>   
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Exportable Table -->
</div>