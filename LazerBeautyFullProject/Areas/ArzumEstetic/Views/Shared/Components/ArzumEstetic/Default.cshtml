<aside id="leftsidebar" class="sidebar">
    <div class="user-info">
        <img src="~/2.png" />
        <div class="image" style="margin-bottom:52px">
        </div>
        <div class="info-container">
            <h3 class="name" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@User.Identity.Name</h3>
            <div class="btn-group user-helper-dropdown">
                <i class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">keyboard_arrow_down</i>
                <ul class="dropdown-menu pull-right">
                    <li role="separator" class="divider"></li>
                    <li><a asp-area="" asp-controller="Account" asp-action="Logout"><i class="material-icons">input</i>Hesabdan çıxış</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="menu">
        <ul class="list">

            <li class="header" style="color:#ff0000">@User.Identity.Name</li>
          
                @if (!User.IsInRole("Reservator"))
            {
                <li>
                    <a href="javascript:void(0);" class="menu-toggle">
                        <i class="material-icons">store</i>
                        <span>Filial keçid</span>
                    </a>
                    <ul class="ml-menu">
                        <li>
                            <a asp-area="ArzumMini" asp-controller="Kassa" asp-action="BudgetPage">Arzum Mini Laser Studio</a>
                        </li>
                        <li>
                            <a asp-area="ArzumBeauty" asp-controller="Kassa" asp-action="BudgetPage">Arzum Beauty  Studio</a>
                        </li>
                        @if (User.IsInRole("Admin") || User.IsInRole("SuperSupporter") || User.IsInRole("Supporter"))
                        {
                            <li>
                                <a asp-area="Admin" asp-controller="TotalKassa" asp-action="BudgetPage">İdarə paneli</a>
                            </li>
                        }
                        @if (User.IsInRole("SuperSupporter") || User.IsInRole("Supporter"))
                        {
                            <li>
                                <a asp-area="Support" asp-controller="Statistics" asp-action="Index">Texniki dəstək</a>
                            </li>
                        }
                </ul>
            </li>
            }
          
            <li>
                <a href="javascript:void(0);" class="menu-toggle">
                    <i class="material-icons">edit_calendar</i>
                    <span>Gündəlik işlər</span>
                </a>
                <ul class="ml-menu">
                    <li>
                        <a asp-controller="Customer" asp-action="DailyBirthDate">Ad günləri</a>
                    </li>
                    <li>
                        <a asp-controller="LazerAppointment" asp-action="RememberedMonthlySession">Növbəti seans</a>
                    </li>
                    <li>
                        <a asp-controller="LazerAppointment" asp-action="InCompleteSessionList">Bədən ardı</a>
                    </li>
                </ul>
            </li>
            <li>
                <a href="javascript:void(0);" class="menu-toggle">
                    <i class="material-icons">groups</i>
                    <span>Müştərilər</span>
                </a>
                <ul class="ml-menu">

                    <li>
                        <a asp-controller="Customer" asp-action="AddCustomer">Yeni müştəri</a>
                    </li>
                    <li>
                        <a asp-controller="Customer" asp-action="FemaleList">Müştərilər</a>
                    </li>

                </ul>
            </li>
            <li>
                <a href="javascript:void(0);" class="menu-toggle">
                    <i class="material-icons">format_list_bulleted_add</i>
                    <span>Xidmətlər</span>
                </a>
                <ul class="ml-menu">
             
                    <li>
                        <a href="javascript:void(0);" class="menu-toggle">
                            <span>Lazer Epilyasiyası</span>
                        </a>
                        <ul class="ml-menu">
                            @foreach (var item in ViewBag.LazerMasters as List<Entity.Concrete.LazerMaster>)
                            {
                                <li>
                                    <a asp-controller="LazerAppointment" asp-action="LazerMasterPage" asp-route-LazerMasterId="@item.Id">@item.FullName</a>
                                </li>
                            }
                       
                        </ul>
                        <a href="javascript:void(0);" class="menu-toggle">
                            <span>Kosmetologiya</span>
                        </a>
                        <ul class="ml-menu">
                            @foreach (var item in ViewBag.Cosmetologs as List<Entity.Concrete.Cosmetologs>)
                            {
                                <li>
                                    <a asp-controller="Cosmetology" asp-action="CosmetologPage" asp-route-CosmetologId="@item.Id">@item.FullName</a>
                                </li>
                            }
                         
                        </ul>
                      
                        <a href="javascript:void(0);" class="menu-toggle">
                            <span>Solarium</span>
                        </a>
                        <ul class="ml-menu">
                            <li>
                                <a asp-controller="SolariumAppointment" asp-action="SolariumAppointmentList">
                                    <span>Solarium paketləri</span>
                                </a>
                            </li>
                         
                           
                          
                        </ul>
                        <a href="javascript:void(0);" class="menu-toggle">
                            <span>Bədən Şəkilləndirmə</span>
                        </a>
                        <ul class="ml-menu">
                            
                                @foreach (var item in ViewBag.BodyShapingMasters as List<Entity.Concrete.BodyShapingMaster>)
                                {
                                    <li>
                                        <a asp-controller="BodyShapingAppointment" asp-action="BodyShapingMasterPage" asp-route-BodyShapingMasterId="@item.Id">@item.FullName</a>
                                    </li>
                                }
                           
                        </ul>
                        <a href="javascript:void(0);" class="menu-toggle">

                            <span>Lipuçka</span>
                        </a>
                        <ul class="ml-menu">
                            @foreach (var item in ViewBag.LazerMasters as List<Entity.Concrete.LazerMaster>)
                            {
                                <li>
                                    <a asp-controller="LipuckaAppointment" asp-action="LipuckaMasterPage" asp-route-LipuckaMasterId="@item.Id">@item.FullName</a>
                                </li>
                            }

                        </ul>
                        <a href="javascript:void(0);" class="menu-toggle">

                            <span>Pirsinq</span>
                        </a>
                        <ul class="ml-menu">
                            @foreach (var item in ViewBag.LazerMasters as List<Entity.Concrete.LazerMaster>)
                            {
                                <li>
                                    <a asp-controller="PirsinqAppointment" asp-action="PirsinqMasterPage" asp-route-PirsinqMasterId="@item.Id">@item.FullName</a>
                                </li>
                            }

                        </ul>
                     
                    </li>
