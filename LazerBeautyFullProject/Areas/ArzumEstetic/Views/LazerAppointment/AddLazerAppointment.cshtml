<script>
    $(document).on('change', '#maincCategoryId', function () {

        $.ajax({
            url: "/LazerAppointment/ChildCategoriesList",
            type: "GET",
            data: {
                "mainId": $("#maincCategoryId").val()
            },
            success: function (response) {
                $("#childCategoryId").empty()
                $("#childCategoryId").append(response)
            }

        });


    })
</script>









       
















