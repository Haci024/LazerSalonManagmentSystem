@model DTO.DTOS.CosmetologyDTO.AddNewSessionDTO
@{
    ViewData["Title"] = "UpdateAppointment";
    Layout = "~/Areas/ArzumEstetic/Views/Shared/_ArzumEsteticLayout.cshtml";
}

<div class="container">

    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-8">
            <div class="card">
                <div class="header text-center">
                    <h2> Kosmetologiya Seansı yenilə</h2>
                </div>
                <div class="body">
                    <form id="form_validation" method="post">
                        <div class="form-group form-float">
                            <label class="form-label">Müştəri adı və soyadı</label>
                            <div class="form-line">
                                <input type="text" asp-for="CustomerName" class="form-control" id="CustomerNameInput">

                            </div>
                            <div id="CustomerInfo">
                            </div>
                        </div>
                        <div class="form-group form-float" style="padding-top:14px">
                            <label class="form-label">Kosmetoloq<span class="font-bold col-pink"></span></label>

                            <div class="form-line">
                                <input type="text" asp-for="CosmetologName" class="form-control" readonly>
                            </div>
                            <span class="font-bold col-pink"></span>
                        </div>

                        <div class="row clearfix">
                            <div class="col-lg-12 form-line">
                                <p>
                                    <label class="form-label">Paket seçin</label>
                                </p>

                                <select class="show-tick form-control" asp-for="CategoriesId" id="childCategoryId">

                                    @foreach (var item in Model.CosmetologyCategories)
                                    {

                                        if (item.MainCategoryId != null)
                                        {
                                            <option value="@item.Id"> @item.MainCategory.CategoryName - @item.CategoryName</option>

                                        }
                                    }
                                </select>

                            </div>
                        </div>


                        <div class="form-group form-float" style="padding-top:14px">
                            <label class="form-label">Açıqlama<span class="font-bold col-pink"></span></label>

                            <div class="form-line">
                                <input type="text" asp-for="Description" class="form-control">
                            </div>
                            <span class="font-bold col-pink"></span>
                        </div>
                        <div class="form-group form-float" style="padding-top:14px">
                            <label class="form-label">Ödəniş məbləği<span class="font-bold col-pink"></span></label>

                            <div class="form-line">
                                <input type="number" asp-for="Price" class="form-control" step="0.1" min="0">
                            </div>
                            <span class="font-bold col-pink"></span>
                        </div>




                        <div class="font-bold col-pink" asp-validation-summary="ModelOnly"></div>

                        <div class="text-center">
                            <button class="btn btn-primary waves-effect" type="submit"  id="submitButton">Əlavə et</button>
                            <a asp-action="CosmetologPage" asp-route-CosmetologId="@Model.CosmetologId" class="btn btn-success">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.19.3/jquery.validate.min.js"></script>

<script>


    document.getElementById("form_validation").addEventListener("submit", function (event) {
        // Form gönderildiğinde butonu devre dışı bırak
        document.getElementById("submitButton").disabled = true;

        // 3 saniye sonra butonu tekrar etkinleştir
        setTimeout(function () {
            document.getElementById("submitButton").disabled = false;
        }, 5000); // 3 saniye (3000 milisaniye)
    });

</script>