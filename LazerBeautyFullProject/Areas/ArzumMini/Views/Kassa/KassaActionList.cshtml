@model IEnumerable<Entity.Concrete.KassaActionList>
@{
    ViewData["Title"] = "KassaActionList";
}

<div class="container-fluid">

    <!-- Exportable Table -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <div style="display:flex;justify-content:space-between;align-items:center">
                        <h2>
                         Kassa Əməliyyatları
                        </h2>

                        <div style="padding-right:30px">


                            <button id="calculatePriceButtonMaster1" class="btn btn-primary">Hesabla</button>
                            <a asp-action="OutMoneyForOwner" class="btn bg-deep-purple waves-effect ">
                                <i class="material-icons">payments</i>

                            </a>
                        </div>
                    </div>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>

                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                            <thead>
                                <tr>
                                    <th>Tarix</th>
                                    <th>İcracı</th>
                                    <th id="priceValueMaster1">Məbləğ</th>
                                   
                                  
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Tarix</th>
                                    <th>İcracı</th>
                                    <th>Məbləğ</th>
                                   

                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.LastOutMoneyDate.ToString("dd.MM.yyyy  HH:dd")</td>
                                        <td>@item.AppUser.UserName</td>
                                        <td>@item.OutMoneyQuantity.ToString("00") AZN</td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
      
        function calculateTotalPrice() {
            var total = 0;
           
            $("tbody tr").each(function () {
                var price = parseFloat($(this).find("td:eq(2)").text().replace(" AZN", ""));
                total += price;
            });

           
            $("#priceValueMaster1").text("Ümumi:" + total.toFixed(2).replace(/\.00$/, '') + " AZN");
        }

        // Add a click event handler to the "Hesabla" button
        $("#calculatePriceButtonMaster1").click(function () {
            calculateTotalPrice();
        });

        // Calculate the total price when the page loads

    });
</script>

