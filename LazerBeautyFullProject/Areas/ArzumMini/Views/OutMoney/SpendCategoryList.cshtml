@model IEnumerable<Entity.Concrete.SpendCategory>
@{
    ViewData["Title"] = "SpendCategoryList";
    Layout = "~/Areas/ArzumMini/Views/Shared/_LazerMiniLayout.cshtml";
}

<div class="container-fluid">

    <!-- Exportable Table -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <div style="display:flex;justify-content:space-between;align-items:center">
                        <h2>
                            Xərclər
                        </h2>
                        <div style="padding-right:30px">
                         
                            <a asp-action="AddSpendCategory" class="btn bg-deep-purple waves-effect">
                                <i class="material-icons">add</i>
                            </a>
                        </div>
                    </div>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable js-basic-example">
                            <thead>
                                <tr>
                                    <th class="text-center">Kategoriya</th>
                                    <th>Status</th>
                                    <th class="text-center">
                                        <div class="text-center">
                                            Əməliyyatlar
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
   
                                    <th class="text-center">Kategoriya</th>
                                    <th>Status</th>
                                    <th class="text-center">
                                        <div class="text-center">
                                            Əməliyyatlar
                                        </div>
                                    </th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (Entity.Concrete.SpendCategory item in Model)
                                {
                                    <tr>   
                                        <td  class="text-center"><b>@item.Category</b></td>
                                        <td>
                                            @if (item.Status == true)
                                            {
                                                <b style="color:red">Deaktiv!</b>
                                            }
                                            else
                                            {
                                                <b style="color:green">Aktiv</b>
                                            }
                                        </td>
                                        <td style="display:flex;justify-content:center">
                                            @if (item.Status == true)
                                            {
                                                <div style="margin-right:10px" class="text-center">
                                                    <a asp-action="SpendCategoryOFF" asp-route-Id="@item.Id" class="btn bg-green waves-effect">
                                                        <i class="material-icons">build</i>
                                                    </a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div style="margin-right:10px" class="text-center">
                                                    <a asp-action="SpendCategoryOFF" asp-route-Id="@item.Id" class="btn bg-red waves-effect">
                                                        <i class="material-icons">delete</i>
                                                    </a>
                                                </div>
                                            }
                                            <div style="margin-right:10px" class="text-center">
                                                <a asp-action="UpdateSpendCategory" asp-route-Id="@item.Id" class="btn bg-blue waves-effect">
                                                    <i class="material-icons">edit</i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Exportable Table -->
</div>

