@model DTO.DTOS.LipuckaDTO.CompleteLipuckaAppointmentDTO
@{
    ViewData["Title"] = "AddLipuckaAppointment";
    Layout = "~/Areas/ArzumMini/Views/Shared/_LazerMiniLayout.cshtml";
}

<div class="container">

    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-8">
            <div class="card">
                <div class="header text-center">
                    <h2>Lipuçka seans çıxış formu</h2>
                </div>
                <div class="body">
                    <form id="form_validation" method="post">
                        <div class="form-group form-float">
                            <label class="form-label">Müştəri</label>
                            <div class="form-line">
                                <input type="text" asp-for="Customer" class="form-control" readonly>

                            </div>
                        </div>
                        <div class="form-group form-float">
                            <label class="form-label">Lazer ustası</label>
                            <div class="form-line">
                                <input type="text" asp-for="Master" class="form-control" readonly>

                            </div>
                        </div>
                        <div class="form-group form-float">
                            <label class="form-label">Açıqlama</label>
                            <div class="form-line">
                                <input type="text" asp-for="Description" class="form-control">

                            </div>
                        </div>
                        <p>
                            <label>Çıxış saatı</label>
                        </p>
                        <div class="input-group">

                            <span class="input-group-addon">
                                <i class="material-icons">access_time</i>
                            </span>
                            <div class="form-line">
                                <input type="time" asp-for="EndTime" class="form-control datetime" placeholder="Ex: 30/07/2016 23:59">
                            </div>
                        </div>
                        <div class="form-group form-float" style="padding-top:14px">
                            <label class="form-label">Ödəniləcək məbləğ <span class="font-bold col-pink"></span></label>
                            <div class="form-line">
                                <input type="number" asp-for="Price" class="form-control" id="totalPrice" step="0.1" readonly>
                            </div>
                            <span class="font-bold col-pink"></span>
                        </div>
                        <div class="font-bold col-pink" asp-validation-summary="ModelOnly"></div>
                        <div class="text-center">
                            <button class="btn btn-primary waves-effect" type="submit" id="submitButton">Əlavə et</button>
                            <a asp-action="LipuckaMasterPage" asp-route-LipuckaMasterId="@Model.LipuckaMasterId" class="btn btn-success">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<script>
    document.getElementById("myForm").addEventListener("submit", function (event) {
        // Form gönderildiğinde butonu devre dışı bırak
        document.getElementById("submitButton").disabled = true;

        // 3 saniye sonra butonu tekrar etkinleştir
        setTimeout(function () {
            document.getElementById("submitButton").disabled = false;
        }, 5000); // 3 saniye (3000 milisaniye)
    });

</script>



