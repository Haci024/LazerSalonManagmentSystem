@model DTO.DTOS.LazerAppointmentDTO.LazerPriceUpdateDTO
@{
    ViewData["Title"] = "UpdateReservationStatus";
}
<div class="container">

    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-8">
            <div class="card">
                <div class="header text-center">
                    <h2>Qiymət artımı</h2>
                </div>
                <div class="body">
                    <form id="form_validation" method="post">
                        <div class="form-group form-float">
                            <label class="form-label">Ödəniş məbləği</label>
                            <div class="form-line">
                                <input type="number" asp-for="Price" class="form-control" >

                            </div>

                        </div>
                        <div class="form-group form-float">
                            <label class="form-label">Açıqlama</label>
                            <div class="form-line">
                                <input type="text" asp-for="Desciption" class="form-control">

                            </div>

                     </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="text-center">
                            <button class="btn btn-primary waves-effect" type="submit">Yenilə</button>
                            <a asp-action="LazerMasterPage" asp-route-LazerMasterId="@Model.LazerMasterId" class="btn btn-success">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
